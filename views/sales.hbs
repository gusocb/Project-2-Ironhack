<div class="reports-container">
  <h1>Sales Reports</h1>

  <div class="report-cards-container">
    {{#each sales}}
      <div class="card" id="report-card">
        <div class="card-header">
          <h3 class="card-title">Sale {{@index}}:</h3>
        </div>

        <div class="card-body">
          {{#each this.movements}}
          <p class="card-text">Product: {{this.product.name}}</p>
          <p class="card-text">Single Price: ${{this.product.price}}</p>
          <p class="card-text">Sold Pieces: {{this.quantity}}</p>
          <p class="card-text" id="subtotal">Sub-Total: ${{this.subTotal}}</p>
          {{/each}}

          <div class="card-footer">
            <h4 class="card-title">
              Total Sale: ${{this.total}}
            </h4>
          </div>

        </div>

      </div>
    {{/each}}
  </div>
</div>